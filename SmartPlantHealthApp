import tkinter as tk
from tkinter import messagebox
plant_diseases = {
    "tomato": "🍅 Tomato Disease:\n\n🦠 Disease: Early Blight\n💡 Cause: Fungus\n🧪 Treatment: Use copper-based fungicide and avoid overhead watering.",
    "potato": "🥔 Potato Disease:\n\n🦠 Disease: Late Blight\n💡 Cause: Phytophthora fungus\n🧪 Treatment: Remove infected plants and use certified seeds.",
    "rose": "🌹 Rose Disease:\n\n🦠 Disease: Black Spot\n💡 Cause: Fungal infection\n🧪 Treatment: Use neem oil and prune infected leaves.",
    "mango": "🥭 Mango Disease:\n\n🦠 Disease: Powdery Mildew\n💡 Cause: Fungal spores\n🧪 Treatment: Use sulfur-based sprays and ensure proper airflow.",
    "banana": "🍌 Banana Disease:\n\n🦠 Disease: Panama Disease\n💡 Cause: Soil-borne fungus\n🧪 Treatment: Use resistant varieties and rotate crops.",
}
def check_disease():
    plant_name = entry.get().strip().lower()
    if plant_name in plant_diseases:
        result_label.config(text=plant_diseases[plant_name], fg="#0b3d91")
    else:
        result_label.config(text="❌ No data found.\nTry: Tomato, Potato, Rose, Mango, or Banana.", fg="red")
root = tk.Tk()
root.title("🌿 Smart Plant Disease Advisor")
root.geometry("500x500")
root.config(bg="#f0fff0")
title_label = tk.Label(root, text="🌱 Smart Plant Disease Advisor", font=("Helvetica", 18, "bold"), fg="#006400", bg="#f0fff0")
title_label.pack(pady=20)
entry = tk.Entry(root, font=("Helvetica", 14), width=30, bd=3)
entry.pack(pady=10)
entry.insert(0, "Enter plant name (e.g. tomato)")
check_btn = tk.Button(root, text="Check Disease", font=("Helvetica", 13, "bold"), bg="#228b22", fg="white", command=check_disease)
check_btn.pack(pady=10)
result_label = tk.Label(root, text="", font=("Helvetica", 12), bg="#f0fff0", wraplength=450, justify="left")
result_label.pack(pady=20)
footer_label = tk.Label(root, text="🌼 Developed by Thahaseen - AIML 3rd Year", font=("Helvetica", 10), bg="#f0fff0", fg="#2e8b57")
footer_label.pack(side="bottom", pady=10)
root.mainloop()
