import tkinter as tk
from tkinter import messagebox
plant_diseases = {
    "tomato": "ğŸ… Tomato Disease:\n\nğŸ¦  Disease: Early Blight\nğŸ’¡ Cause: Fungus\nğŸ§ª Treatment: Use copper-based fungicide and avoid overhead watering.",
    "potato": "ğŸ¥” Potato Disease:\n\nğŸ¦  Disease: Late Blight\nğŸ’¡ Cause: Phytophthora fungus\nğŸ§ª Treatment: Remove infected plants and use certified seeds.",
    "rose": "ğŸŒ¹ Rose Disease:\n\nğŸ¦  Disease: Black Spot\nğŸ’¡ Cause: Fungal infection\nğŸ§ª Treatment: Use neem oil and prune infected leaves.",
    "mango": "ğŸ¥­ Mango Disease:\n\nğŸ¦  Disease: Powdery Mildew\nğŸ’¡ Cause: Fungal spores\nğŸ§ª Treatment: Use sulfur-based sprays and ensure proper airflow.",
    "banana": "ğŸŒ Banana Disease:\n\nğŸ¦  Disease: Panama Disease\nğŸ’¡ Cause: Soil-borne fungus\nğŸ§ª Treatment: Use resistant varieties and rotate crops.",
